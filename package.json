{
	"name": "ocamlsdl2",
	"version": "2.0",
	"description": "Interface to the SDL2 library",
	"license": "restrictionless Zlib",
	"esy": {
		"build": [
			"cp src/Makefile.config.unix src/Makefile.config",
			"make -C src gen",
			"make -C src dep",
			"make -C src opt",
			"make -C src byte",
			"make -C src ba",
			"make -C src baopt"
		],
		"buildsInSource": true,
		"install": [
			"make -C src install DESTDIR='#{self.install}/lib/sdl2/'",
			"make -C src install_h DESTDIR='#{self.install}/lib/sdl2/'"
		]
	},
	"dependencies": {
		"ocaml": "<5",
		"@opam/ocamlfind": "1.9.3",
		"@opam/conf-sdl2": "*"
	}
}

